<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs") %>

</head>
<body>
<!-- Навігаційна панель -->
<%- include("./partials/navbar.ejs") %>
<div class="container-fluid">
    <div class="row  min-vh-100">
        <div class="col-2 bg-dark">
            <!-- Бічна навігаційна панель -->
            <%- include("./partials/sidebar.ejs") %>

        </div>
        <div class="col-10">
            <!-- Вміст сторінки -->
            <h1 class="mt-3">Книги</h1>

            <table class="table">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Назва книги</th>
                    <th scope="col">Автори</th>
                    <th scope="col">Рік</th>
                    <th scope="col">Видалення</th>
                    <th scope="col">Кліків</th>
                    <th scope="col">К-ть відвідин</th>
                </tr>
                </thead>
                <tbody>
                <% for (let i = 0; i < books.length; i++) { %>
                    <tr>
                        <th scope="row"><%= books[i].id %></th>
                        <!--                        <th scope="row"><%= i %></th>-->
                        <td><%= books[i].name %></td>
                        <td><%= books[i].author %></td>
                        <td><%= books[i].release_year %></td>


                        <td><a id="soft-deletion"
                               href="/admin-panel/soft_deletion?bookId=<%= books[i].id %>&page=<%= page %>">
                                <% if(books[i].deletion) { %>

                                    відновити
                                <% } else { %>
                                    видалити
                                <% } %>
                            </a></td>


                        <td><%= books[i].wanted %></td>
                        <td><%= books[i].visits %></td>

                    </tr>
                <% } %>
                </tbody>
            </table>
            <nav class="navigation example ">
                <ul class="d-flex justify-content-center pagination ">
                    <li class="page-item">
                        <% if(page - 1 > 0){ %>
                            <a class="page-link"
                               href="/admin-panel/products?page=<%= page - 1 %> %>"
                               aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>


                    <li class="page-item"><a class="page-link"
                                             href="/admin-panel/products?page=<%= page - 1 %> %>"> <%= page - 1 %></a>
                    </li>
                    <% } %>
                    <li class="page-item active"><a class="page-link"
                                                    href="/admin-panel/products?page=<%= page %> %>"> <%= page %></a>
                    </li>
                    <% if(page + 1 <= booksCount){ %>
                        <li class="page-item"><a class="page-link"
                                                 href="/admin-panel/products?page=<%= page + 1 %> %>"> <%= page + 1 %></a>
                        </li>

                        </li>
                        <a class="page-link" href="/admin-panel/products?page=<%= page + 1 %> %>"
                           aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        </div>
    </div>
</div>

</body>


</html>